<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jlkg.jzg.jzg_android.personal.activity.classactivity.BeforeObjectActivity">

    <com.jlkg.jzg.jzg_android.weidget.MyToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="项目详情"
        android:id="@+id/myToolbar"
        app:leftImg="@mipmap/nav_icon_back"
        app:RightText="编辑">
    </com.jlkg.jzg.jzg_android.weidget.MyToolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginBottom="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:padding="@dimen/dimen_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_4_grey"
                android:layout_margin="@dimen/dimen_10"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_47.25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:textSize="@dimen/text_15sp"
                        android:textColor="@color/text_575757"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="项目名称："/>
                    <TextView
                        android:enabled="false"
                        android:maxLength="16"
                        android:id="@+id/edt_name"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_15sp"
                        android:textColor="@color/color_039aff"
                        android:background="@null"
                        android:hint="请输入项目名称"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/color_e2e2e2"/>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_47.25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:textSize="@dimen/text_15sp"
                        android:textColor="@color/text_575757"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="公司名称："/>
                    <TextView
                        android:enabled="false"
                        android:maxLength="16"
                        android:hint="请输入公司名称"
                        android:id="@+id/edt_companyName"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_15sp"
                        android:textColor="@color/color_333333"
                        android:background="@null"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/color_e2e2e2"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_15sp"
                        android:textColor="@color/text_575757"
                        android:text="项目时间："/>

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/tv_time"
                        android:hint="时间"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/color_e2e2e2"/>


                <LinearLayout
                    android:paddingTop="@dimen/dimen_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_110"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_15sp"
                        android:textColor="@color/text_575757"
                        android:text="地址："/>
                    <TextView
                        android:enabled="false"
                        android:maxLength="200"
                        android:id="@+id/edt_address"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:textSize="@dimen/text_15sp"
                        android:background="@null"
                        android:textColor="@color/color_333333"
                        android:hint="描述"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/color_e2e2e2"/>


                <TextView
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_15sp"
                    android:textColor="@color/text_575757"
                    android:text="项目风采（最多6张）"/>

                <com.jlkg.jzg.jzg_android.other.widget.GridViewForScrollView
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:numColumns="3"
                    android:id="@+id/grid_img">
                </com.jlkg.jzg.jzg_android.other.widget.GridViewForScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
