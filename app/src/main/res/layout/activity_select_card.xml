<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jlkg.jzg.jzg_android.personal.activity.SelectCardActivity">

    <com.jlkg.jzg.jzg_android.weidget.MyToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="选择银行卡"
        app:leftImg="@mipmap/nav_icon_back"></com.jlkg.jzg.jzg_android.weidget.MyToolbar>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/smart_refresh"
        android:layout_marginTop="@dimen/dimen_5">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_content"
            android:paddingTop="@dimen/dimen_2"
            android:paddingRight="@dimen/dimen_1"
            android:paddingLeft="@dimen/dimen_1"
            android:paddingBottom="@dimen/dimen_2"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_4_grey">

        </android.support.v7.widget.RecyclerView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
