<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jlkg.jzg.jzg_android.personal.activity.AddMemberActivity">

    <com.jlkg.jzg.jzg_android.weidget.MyToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="添加成员"
        app:leftImg="@mipmap/nav_icon_back">
    </com.jlkg.jzg.jzg_android.weidget.MyToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@drawable/shape_white_4_grey"
        android:orientation="vertical">

        <LinearLayout
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_49"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"/>
            <EditText
                android:textCursorDrawable="@drawable/shape_cursor_bg"

                android:id="@+id/et_name"
                android:layout_weight="2"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/color_333333"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="请输入姓名"
                android:maxLength="16"
                android:background="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/color_c8c8c8"/>

        <LinearLayout
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_49"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="身份证号："
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"/>
            <EditText
                android:textCursorDrawable="@drawable/shape_cursor_bg"

                android:id="@+id/et_idNumber"
                android:layout_weight="2"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/color_6ace89"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="请输入身份证号"
                android:maxLength="18"
                android:background="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/color_c8c8c8"/>


        <LinearLayout
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_49"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="手机号："
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"/>
            <EditText
                android:textCursorDrawable="@drawable/shape_cursor_bg"

                android:id="@+id/et_phone"
                android:layout_weight="2"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/color_6ace89"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:background="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/color_c8c8c8"/>


        <LinearLayout
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_49"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="提现银行："
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"/>

            <TextView
                android:id="@+id/tv_bankName"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:hint="请选择"
                android:textColor="@color/color_6ace89"
                android:textSize="@dimen/text_15sp"
                android:drawableRight="@mipmap/content_icon_more4"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/color_c8c8c8"/>


        <LinearLayout
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_49"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="银行卡："
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"/>
            <EditText
                android:textCursorDrawable="@drawable/shape_cursor_bg"

                android:id="@+id/et_cardNumber"
                android:layout_weight="2"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/color_333333"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="请输入卡号"
                android:maxLength="19"
                android:inputType="number"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_55"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginRight="@dimen/dimen_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:id="@+id/tv_confirm"
        android:enabled="false"
        android:background="@drawable/select_button_enable"
        android:textSize="@dimen/text_18sp"
        android:textColor="@color/white"
        android:text="提交"/>

</LinearLayout>
