<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jlkg.jzg.jzg_android.home.fragments.TeamInfoFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/d_select_role_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:text="班组负责人："
                        android:textColor="@color/text_575757"
                        android:textSize="@dimen/text_15sp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/text_15sp" />
                </LinearLayout>

                <View style="@style/LineStyle"
                    android:layout_marginLeft="2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:text="联系方式："
                        android:textColor="@color/text_575757"
                        android:textSize="@dimen/text_15sp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/color_6ace89"
                        android:textSize="@dimen/text_15sp" />
                </LinearLayout>

                <View style="@style/LineStyle"
                    android:layout_marginLeft="2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:text="班组类型："
                        android:textColor="@color/text_575757"
                        android:textSize="@dimen/text_15sp" />

                    <TextView
                        android:id="@+id/tv_team_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/text_15sp" />
                </LinearLayout>

                <View style="@style/LineStyle"
                    android:layout_marginLeft="2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:text="班组地址："
                        android:textColor="@color/text_575757"
                        android:textSize="@dimen/text_15sp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/text_15sp" />
                </LinearLayout>
                <View style="@style/LineStyle"
                    android:layout_marginLeft="2dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        android:textColor="@color/text_575757"
                        android:textSize="@dimen/text_15sp" />

                    <TextView
                        android:id="@+id/tv_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/text_15sp" />
                </LinearLayout>

                <View style="@style/LineStyle"
                    android:layout_marginLeft="2dp"/>

                <TextView
                    android:id="@+id/tv_old_project"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:drawableRight="@mipmap/content_icon_more"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="过往项目"
                    android:textColor="@color/text_blue_color"
                    android:textSize="@dimen/text_15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:drawableLeft="@mipmap/content_icon_comment"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="用户评价"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/text_16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/d_select_role_bg" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
