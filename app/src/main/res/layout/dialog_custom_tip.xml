<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_38"
        android:layout_marginRight="@dimen/dimen_38"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_3_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_marginTop="@dimen/dimen_18"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/remind_icon_warnning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_marginBottom="@dimen/dimen_18"
            android:id="@+id/tv_message"
            android:paddingLeft="@dimen/dimen_25"
            android:paddingRight="@dimen/dimen_25"
            android:gravity="center"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_1f1f1f"
            android:layout_gravity="center"
            android:text="XXXXXXXXXXXXXXX" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/theme_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="稍後再說"
                android:textColor="@color/color_a5a5a5"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/theme_line" />

            <Button
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="查看認證"
                android:textColor="@color/color_1f1f1f"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>