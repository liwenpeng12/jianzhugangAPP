<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@drawable/shape_white_4_grey"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招聘中"
                android:textColor="@color/color_039aff"
                android:textSize="@dimen/text_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_13"
                android:layout_height="@dimen/dimen_14"
                android:src="@mipmap/content_icon_person" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="招工人数："
                android:textColor="@color/color_a5a5a5"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:textColor="@color/color_6ace89"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_13"
                android:layout_height="@dimen/dimen_14"
                android:src="@mipmap/content_icon_type" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="类\u3000\u3000型："
                android:textColor="@color/color_a5a5a5"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:textColor="@color/color_a5a5a5"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_13"
                android:layout_height="@dimen/dimen_14"
                android:src="@mipmap/content_icon_time" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="发布时间："
                android:textColor="@color/color_a5a5a5"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:textColor="@color/color_a5a5a5"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginTop="@dimen/dimen_14"
            android:background="@color/color_e2e2e2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginBottom="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/dimen_1"
            android:layout_marginRight="@dimen/dimen_1"
            android:background="@drawable/shape_bottom_f4f9fd_4dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dimen_15">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_35"
                android:background="@drawable/shape_4dp_blue"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/color_039aff"
                android:textSize="@dimen/text_16sp" />


            <TextView
                android:id="@+id/tv_right"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginLeft="@dimen/dimen_15"
                android:background="@drawable/shape_blue_4dp"
                android:gravity="center"
                android:text="确认完成"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginLeft="@dimen/dimen_15"
                android:background="@drawable/shape_blue_4dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="重新编辑"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>