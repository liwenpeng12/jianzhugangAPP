<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jlkg.jzg.jzg_android.personal.activity.ChangePasswordActivity">

    <com.jlkg.jzg.jzg_android.weidget.MyToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="修改密码"
        app:leftImg="@mipmap/nav_icon_back">
    </com.jlkg.jzg.jzg_android.weidget.MyToolbar>


    <LinearLayout
        android:paddingRight="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_15"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="原密码："
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/text_575757"
            />

        <EditText
            android:textCursorDrawable="@drawable/shape_cursor_bg"
            android:id="@+id/et_old_password"
            android:inputType="textPassword"
            android:maxLength="18"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入原密码"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/color_333333"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/color_c8c8c8"/>

    <LinearLayout
        android:paddingRight="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_15"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="新密码："
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/text_575757"
            />

        <EditText
            android:textCursorDrawable="@drawable/shape_cursor_bg"

            android:id="@+id/et_new_password"
            android:inputType="textPassword"
            android:maxLength="18"
            android:hint="请输入新密码"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/color_333333"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/color_c8c8c8"/>

    <LinearLayout
        android:paddingRight="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_15"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/text_575757"
            />

        <EditText
            android:textCursorDrawable="@drawable/shape_cursor_bg"

            android:id="@+id/et_confirm_password"
            android:inputType="textPassword"
            android:maxLength="18"
            android:hint="请确认密码"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/color_333333"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/color_c8c8c8"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/ll_hint"
        android:visibility="invisible"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:background="@drawable/shape_black_20dp">

        <ImageView
            android:layout_width="@dimen/dimen_16"
            android:layout_height="@dimen/dimen_16"
            android:src="@mipmap/ico_remind_white"/>

        <TextView
            android:id="@+id/tv_hint_content"
            android:layout_marginLeft="@dimen/dimen_5"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/white"
            android:text="两次输入的密码不一致"/>

    </LinearLayout>
    <TextView
        android:enabled="false"
        android:id="@+id/tv_complete"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:textSize="@dimen/text_18sp"
        android:textColor="@color/white"
        android:text="完成"
        android:background="@drawable/select_button_enable"/>
</LinearLayout>
