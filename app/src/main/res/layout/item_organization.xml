<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_4_grey"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10">


        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_18sp"
            android:textColor="@color/color_333333"
            android:drawableRight="@mipmap/content_icon_more4"/>


        <TextView
            android:id="@+id/tv_introduce"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/color_a5a5a5"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"/>

        <View
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:background="@color/color_e2e2e2"
            android:layout_height="@dimen/dimen_1"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_1"
            android:layout_marginRight="@dimen/dimen_1"
            android:layout_marginBottom="@dimen/dimen_2"
            android:background="@color/color_f7f9fd"
            android:gravity="center_vertical|right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_dispatch"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_4dp_blue"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/color_039aff"
                android:text="调度公司"/>

            <TextView
                android:id="@+id/tv_labour"
                android:gravity="center"
                android:layout_marginRight="@dimen/dimen_11"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_blue_4dp"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/white"
                android:text="劳务公司"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>