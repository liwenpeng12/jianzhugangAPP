<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f2f2f2"
    tools:context="com.jlkg.jzg.jzg_android.personal.activity.MineInfoActivity">

    <com.jlkg.jzg.jzg_android.weidget.MyToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="个人资料"
        app:leftImg="@mipmap/nav_icon_back">
    </com.jlkg.jzg.jzg_android.weidget.MyToolbar>

    <LinearLayout
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_radiu_4dp"
        android:layout_margin="@dimen/dimen_10">


        <LinearLayout

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="头像："/>
            
            <com.jlkg.jzg.jzg_android.other.widget.CircleImageView
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:id="@+id/img_avatar"
                android:src="@mipmap/upload_avatar"/>

            <ImageView
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/content_icon_more"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="名称："/>

            <EditText

                android:gravity="right"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/shape_cursor_bg"
                android:hint="请输入名称"
                android:background="@color/white"
                android:id="@+id/tv_name"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_15sp"
                android:maxLength="16"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>




        <LinearLayout

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="实名认证："/>

            <TextView
                android:id="@+id/tv_approve"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_039aff"
                android:textSize="@dimen/text_15sp"
                android:text="已认证"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="手机号："/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_6ace89"
                android:textSize="@dimen/text_15sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>


        <LinearLayout

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="性别："/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_sex"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_15sp"
                android:hint="请选择性别"
                android:gravity="right"
                android:drawablePadding="@dimen/dimen_10"
                android:drawableRight="@mipmap/content_icon_more4"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>


        <LinearLayout

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="班组信息："/>

            <TextView
                android:textCursorDrawable="@drawable/shape_cursor_bg"
                android:paddingRight="@dimen/dimen_5"
                android:gravity="right"
                android:layout_weight="1"
                android:id="@+id/tv_company"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_039aff"
                android:textSize="@dimen/text_15sp"
                android:background="@null"
                android:hint="班组类型"/>

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <TextView
        android:id="@+id/tv_complete"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@drawable/button_enable_bg"
        android:text="完成"
        android:textSize="@dimen/text_18sp"
        android:textColor="@color/white"
        android:enabled="false"/>
    </RelativeLayout>
</LinearLayout>
