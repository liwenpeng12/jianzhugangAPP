<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:paddingTop="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_4_grey"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/color_333333"
                android:id="@+id/tv_title"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="广东清远清城区合创集团项目长长长长长长"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/color_039aff"
                android:text="招租中"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_13"
                android:layout_height="@dimen/dimen_14"
                android:src="@mipmap/content_icon_order"/>


            <TextView
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_a5a5a5"
                android:text="机械需求："/>
            <TextView
                android:id="@+id/tv_count"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_6ace89"
                android:text="挖掘机（200型）"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_13"
                android:layout_height="@dimen/dimen_14"
                android:src="@mipmap/content_icon_type"/>


            <TextView
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_a5a5a5"
                android:text="类\u3000\u3000型："/>
            <TextView
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_a5a5a5"
                android:text="机械"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_type"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_13"
                android:layout_height="@dimen/dimen_14"
                android:src="@mipmap/content_icon_time"/>


            <TextView
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_a5a5a5"
                android:text="发布时间："/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_a5a5a5"
                android:text="2018/09/04"/>
        </LinearLayout>

        <View

            android:layout_marginTop="@dimen/dimen_14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout
            android:paddingRight="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_1"
            android:layout_marginRight="@dimen/dimen_1"
            android:layout_marginBottom="@dimen/dimen_1"
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:background="@drawable/shape_bottom_f4f9fd_4dp"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_35"
                android:background="@drawable/shape_4dp_blue"
                android:id="@+id/tv_left"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/color_039aff"
                android:text="删除"/>


            <TextView
                android:layout_marginLeft="@dimen/dimen_15"
                android:gravity="center"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_35"
                android:background="@drawable/shape_blue_4dp"
                android:id="@+id/tv_right"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/white"
                android:text="确认完成"/>
            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginLeft="@dimen/dimen_15"
                android:background="@drawable/shape_blue_4dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="重新编辑"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16sp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>