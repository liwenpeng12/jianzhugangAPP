<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/d_select_role_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_angle_green"
        android:gravity="center"
        android:text="正在招租"
        android:textColor="@color/white"
        android:textSize="@dimen/text_11sp" />

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/content_icon_more2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="广东清远清城区合创集团项目"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/text_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/content_icon_order"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="机械需求："
            android:textColor="@color/text_a5a5a5"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_person_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="挖掘机（200型）"
            android:textColor="@color/color_6ace89"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/content_icon_type"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="类         型："
            android:textColor="@color/text_a5a5a5"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机械"
            android:textColor="@color/text_a5a5a5"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/content_icon_time"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="发布时间："
            android:textColor="@color/text_a5a5a5"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018/01/02"
            android:textColor="@color/text_a5a5a5"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>
</LinearLayout>