<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jlkg.jzg.jzg_android.personal.activity.AddProjectActivity">

    <com.jlkg.jzg.jzg_android.weidget.MyToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="添加项目"
        app:leftImg="@mipmap/nav_icon_back">
    </com.jlkg.jzg.jzg_android.weidget.MyToolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <LinearLayout
        android:padding="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_4_grey"
        android:layout_margin="@dimen/dimen_10"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_47.25"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="项目名称："/>
            <EditText
                android:maxLength="16"
                android:id="@+id/edt_name"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/color_039aff"
                android:background="@null"
                android:hint="请输入项目名称"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_47.25"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="联系人："/>
            <EditText
                android:maxLength="16"
                android:hint="请输入联系人姓名"
                android:id="@+id/edt_person"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/color_333333"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_47.25"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="联系电话："/>
            <EditText
                android:maxLength="11"
                android:id="@+id/edt_phone"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/color_6ace89"
                android:background="@null"
                android:inputType="number"
                android:hint="请输入联系人电话"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout
            android:paddingTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_110"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="项目描述："/>
            <EditText
                android:maxLength="200"
                android:id="@+id/edt_describe"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="top"
                android:textSize="@dimen/text_15sp"
                android:background="@null"
                android:textColor="@color/color_333333"
                android:hint="请输入项目描述"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_4_grey"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">


            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="项目状态："/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_status"
                android:hint="选择状态"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_15"
                android:drawableRight="@mipmap/content_icon_more"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">


            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="开始时间："/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_startTime"
                android:hint="选择开始时间"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_15"
                android:drawableRight="@mipmap/content_icon_more"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">


            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="结束时间："/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_endTime"
                android:hint="选择结束时间"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_15"
                android:drawableRight="@mipmap/content_icon_more"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@drawable/shape_white_4_grey"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">


            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="所在地区："/>

            <TextView
                android:id="@+id/tv_location"
                android:hint="选择地区"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_6ace89"
                android:textSize="@dimen/dimen_15"
                android:drawableRight="@mipmap/content_icon_more"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>
        <LinearLayout
            android:paddingTop="@dimen/dimen_15"
            android:paddingBottom="@dimen/dimen_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_90"
            android:orientation="horizontal">


            <TextView
                android:layout_weight="1"
                android:layout_gravity="top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="街道地址："/>

            <EditText
                android:textCursorDrawable="@drawable/shape_cursor_bg"
                android:maxLength="50"
                android:id="@+id/edt_address"
                android:gravity="top"
                android:background="@color/white"
                android:hint="填写街道地址"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_15"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginBottom="@dimen/dimen_10"
        android:id="@+id/tv_save"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:textSize="@dimen/text_18sp"
        android:textColor="@color/white"
        android:text="保存"
        android:enabled="false"
        android:background="@drawable/select_cir_bg"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
