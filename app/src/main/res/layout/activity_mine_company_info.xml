<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jlkg.jzg.jzg_android.personal.activity.MineCompanyInfoActivity">

    <com.jlkg.jzg.jzg_android.weidget.MyToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="公司信息"
        app:RightText="保存"
        android:id="@+id/my_toolbar"
        app:leftImg="@mipmap/nav_icon_back">
    </com.jlkg.jzg.jzg_android.weidget.MyToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_4_grey"
        android:layout_margin="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_20">


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_18sp"
                android:textColor="@color/text_333333" />

            <TextView
                android:id="@+id/tv_isDen"
                android:layout_marginLeft="@dimen/dimen_10"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_9"
                android:paddingRight="@dimen/dimen_9"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_18"
                android:text="已认证"
                android:background="@color/color_6ace89"
                android:textColor="@color/white"
                android:textSize="@dimen/text_11sp"
                />
        </LinearLayout>


        <LinearLayout
            android:paddingLeft="@dimen/dimen_9"
            android:paddingRight="@dimen/dimen_9"
            android:layout_marginTop="@dimen/dimen_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_ffb74d_2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构代码："
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_f58a23"/>

            <TextView
                android:id="@+id/tv_company_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_f58a23" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/dimen_14"
                android:layout_height="@dimen/dimen_14"
                android:src="@mipmap/content_icon_type"/>

            <TextView
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_a5a5a5"
                android:text="类\u3000\u3000型："/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_a5a5a5"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/dimen_14"
                android:layout_height="@dimen/dimen_14"
                android:src="@mipmap/content_icon_address2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_a5a5a5"
                android:text=""/>
            <TextView
                android:id="@+id/tv_company_address"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司地址："
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_039aff"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="公司联系人："/>

            <EditText
                android:textCursorDrawable="@drawable/shape_cursor_bg"

                android:background="@null"
                android:id="@+id/tv_name"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_15sp"
                android:maxLength="50"
                android:textColor="@color/color_333333"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="联系电话："/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/color_6ace89" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="固话："/>

            <EditText
                android:maxLength="11"
                android:textCursorDrawable="@drawable/shape_cursor_bg"
                android:inputType="phone"
                android:background="@null"
                android:id="@+id/tv_fixedLine"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/color_6ace89" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="邮箱："/>

            <EditText
                android:maxLength="50"
                android:textCursorDrawable="@drawable/shape_cursor_bg"
                android:inputType="textEmailAddress"
                android:background="@null"
                android:id="@+id/tv_email"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/color_333333" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="网址："/>

            <EditText
                android:maxLength="50"
                android:textCursorDrawable="@drawable/shape_cursor_bg"
                android:inputType="textUri"
                android:background="@null"
                android:id="@+id/tv_website"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/color_333333" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e2e2e2"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dimen_60"
            android:layout_marginBottom="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"
                android:text="备注："/>

            <TextView
                android:id="@+id/tv_memo"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/text_575757"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
