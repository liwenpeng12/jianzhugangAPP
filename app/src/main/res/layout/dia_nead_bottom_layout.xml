<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/d_select_role_bg"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_heard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/white_cicle_with_black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_heard"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/content_icon_star1"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="5"
                android:textColor="@color/text_a5a5a5"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="50dp"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_heard"
            android:background="@drawable/d_title_bg"
            android:gravity="center"
            android:text="已认证"
            android:textColor="@color/white"
            android:textSize="@dimen/text_11sp" />

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/content_icon_call1" />
    </RelativeLayout>

    <View
        style="@style/LineStyle"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班组地址："
            android:textColor="@color/text_a5a5a5"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_right_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类         型："
            android:textColor="@color/text_a5a5a5"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_right_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班组人数："
            android:textColor="@color/text_a5a5a5"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_right_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>
</LinearLayout>