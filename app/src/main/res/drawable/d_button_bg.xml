<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="0"
                android:endColor="#800386ff"
                android:startColor="#8002abff"/>
            <corners android:radius="45dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="0"
                android:endColor="#800386ff"
                android:startColor="#8002abff"/>
            <corners android:radius="45dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="0"
                android:endColor="@color/c_0386ff"
                android:startColor="@color/c_02abff"/>
            <corners android:radius="45dp"/>
        </shape>
    </item>
</selector>